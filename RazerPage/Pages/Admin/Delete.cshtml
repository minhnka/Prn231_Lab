@page
@model RazerPage.Pages.Admin.DeleteModel
@{
    ViewData["Title"] = "Delete Orchid";
}

<h1>Delete Orchid</h1>

<div class="alert alert-danger">
    <h3>Are you sure you want to delete this orchid?</h3>
    <p>This action cannot be undone.</p>
</div>

<div asp-validation-summary="All" class="text-danger"></div>

<div class="card mb-4">
    <div class="card-header">
        <h4>Orchid Details</h4>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-8">
                <dl class="row">
                    <dt class="col-sm-3">ID</dt>
                    <dd class="col-sm-9">@Model.Orchid.OrchidId</dd>

                    <dt class="col-sm-3">Name</dt>
                    <dd class="col-sm-9">@Model.Orchid.OrchidName</dd>

                    <dt class="col-sm-3">Category</dt>
                    <dd class="col-sm-9">@Model.Orchid.CategoryName</dd>

                    <dt class="col-sm-3">Price</dt>
                    <dd class="col-sm-9">@(Model.Orchid.Price?.ToString("C") ?? "N/A")</dd>

                    <dt class="col-sm-3">Type</dt>
                    <dd class="col-sm-9">@(Model.Orchid.IsNatural == true ? "Natural" : Model.Orchid.IsNatural == false ? "Hybrid" : "Unspecified")</dd>

                    <dt class="col-sm-3">Description</dt>
                    <dd class="col-sm-9">@Model.Orchid.OrchidDescription</dd>
                </dl>
            </div>
            <div class="col-md-4">
                @if (!string.IsNullOrEmpty(Model.Orchid.OrchidUrl))
                {
                    <img src="@Model.Orchid.OrchidUrl" alt="@Model.Orchid.OrchidName" class="img-fluid" />
                }
                else
                {
                    <div class="text-center p-4 bg-light">
                        <em>No image available</em>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<form method="post">
    <input type="hidden" asp-for="Orchid.OrchidId" />
    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>